<?xml version="1.0" encoding="utf-8"?>
<resources>
]
    <!-- Typography Styles -->
    <style name="Text.Title"  parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Text.Subtitle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Text.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Text.Label" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- CardView Style -->
    <style name="Widget.CoinCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Chip Style -->
    <style name="CoachCoin.Chip.Default" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">?attr/colorPrimary</item>
        <item name="chipStrokeColor">?attr/colorPrimary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>
