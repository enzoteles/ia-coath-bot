<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme for Dark mode. -->
    <style name="Theme.CoachCoin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_primary_dark</item>
        <item name="colorOnPrimary">@color/md_onPrimary_dark</item>
        <item name="colorPrimaryContainer">@color/md_primaryContainer_dark</item>
        <item name="colorOnPrimaryContainer">@color/md_onPrimaryContainer_dark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_secondary_dark</item>
        <item name="colorOnSecondary">@color/md_onSecondary_dark</item>
        <item name="colorSecondaryContainer">@color/md_secondaryContainer_dark</item>
        <item name="colorOnSecondaryContainer">@color/md_onSecondaryContainer_dark</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/md_background_dark</item>
        <item name="colorSurface">@color/md_surface_dark</item>
        <item name="colorOnSurface">@color/md_onSurface_dark</item>

        <!-- Error -->
        <item name="colorError">@color/md_error_dark</item>
        <item name="colorOnError">@color/md_onError_dark</item>

        <!-- Others -->
        <item name="android:textColorPrimary">@color/md_onSurface_dark</item>

    </style>

</resources>
