<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp"
    app:strokeColor="?attr/colorSurfaceVariant"
    app:strokeWidth="1dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/colorSurface">

        <!-- Nome da moeda -->
        <TextView
            android:id="@+id/tvSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTCUSDT"
            android:textColor="?attr/colorOnSurface" />

        <!-- Variações -->
        <TextView
            android:id="@+id/tvChange1m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1m: 0.3%"
            />

        <TextView
            android:id="@+id/tvChange5m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5m: 0.6%"
            />

        <TextView
            android:id="@+id/tvChange10m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10m: 1.1%"
            />

        <TextView
            android:id="@+id/tvChange1h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1h: 2.4%"
            />

        <!-- Tendência -->
        <TextView
            android:id="@+id/tvTrend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tendência de alta consistente"
            android:textColor="@color/colorGreen"
            android:textStyle="italic"
            android:layout_marginTop="4dp"
            />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
